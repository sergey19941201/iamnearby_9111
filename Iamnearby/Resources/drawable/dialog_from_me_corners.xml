<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
      <corners android:radius="8dip" />
      <stroke android:width="1dip" android:color="@color/message_from_me_bg_color" />
    </shape>
  </item>
  <item android:state_focused="true">
    <shape android:shape="rectangle"  >
      <corners android:radius="8dip" />
      <stroke android:width="1dip" android:color="@color/message_from_me_bg_color" />
      <solid android:color="@color/message_from_me_bg_color"/>
    </shape>
  </item>
  <item >
    <shape android:shape="rectangle"  >
      <corners android:radius="8dip" />
      <stroke android:width="1dip" android:color="@color/message_from_me_bg_color" />
      <gradient android:angle="-90" android:startColor="@color/message_from_me_bg_color" android:endColor="@color/message_from_me_bg_color" />
    </shape>
  </item>
</selector>